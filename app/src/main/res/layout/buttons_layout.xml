<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="C"
            android:id="@+id/clear"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="^"
            android:id="@+id/power"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="gcd"
            android:id="@+id/gcd"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="mod"
            android:id="@+id/modulo"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="÷"
            android:id="@+id/division"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="t2"
            android:id="@+id/tmp2"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="7"
            android:id="@+id/btn7"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="8"
            android:id="@+id/btn8"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="9"
            android:id="@+id/btn9"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="x"
            android:id="@+id/multiply"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="t3"
            android:id="@+id/tmp3"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="4"
            android:id="@+id/btn4"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="5"
            android:id="@+id/btn5"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="6"
            android:id="@+id/btn6"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="-"
            android:id="@+id/subtract"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="t4"
            android:id="@+id/tmp4"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="1"
            android:id="@+id/btn1"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="2"
            android:id="@+id/btn2"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="3"
            android:id="@+id/btn3"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="+"
            android:id="@+id/add"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="t5"
            android:id="@+id/tmp5"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="0"
            android:id="@+id/btn0"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="."
            android:id="@+id/btnPoint"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
             android:text="«"
            android:id="@+id/back"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
        <Button
            android:text="="
            android:id="@+id/equal"
            android:layout_margin="1dp"
            android:layout_weight="1"/>
    </TableRow>

</TableLayout>
